@model IEnumerable<FrontUniAmericas.Models.SubjectModel>

@{
    ViewBag.Title = "Asisnaturas";
}

<h2>Asisnaturas de la UDLA</h2>

<p>
    @Html.ActionLink("Crear Asignatura", "Create")
</p>

@if (Model == null)
{
<p>NO HAY</p>
}
else
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SemestreId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semestre.descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Inscritos", "DetailsInscrition", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
}
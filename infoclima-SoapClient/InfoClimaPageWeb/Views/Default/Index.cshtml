@model InfoClimaPageWeb.Models.LoginUserModel

@{
    ViewBag.Title = "Inicio";
}

<div class="jumbotron">
    <h1>INFORMACION DEL CLIMA</h1>
    <p class="lead">Consiste en una Plataforma de consulta de estado climatico de diversas cuidades con todos los detalles.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Visión</h2>
        <p>
            Ser un Sistema de  Consulta de Estado Climatico que esté al alcance de todos los usuarios registrados desde cualquier parte del mundo
            que permita ofrecer informacion en tiempo real.
        </p>
    </div>
    <div class="col-md-4">
        @if (!Model.isAuth)
        {
            <h2>Iniciar Sesión</h2>
            using (Html.BeginRouteForm("Default", new { action = "LoginIn", controller = "Default" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <br />
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.key, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.key, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.key, "", new { @class = "text-danger" })
                        </div>
                    </div>

                        <h4 class="text-danger">@ViewBag.Error</h4>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Ingresar" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        }
        else
        {
            <h2>Cerrar Sesión</h2>
            using (Html.BeginRouteForm("Default", new { action = "LoginOut", controller = "Default" }, FormMethod.Get))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Cerrar Sesión" class="btn btn-warning" /> 
                        </div>
                    </div>
                </div>
            }
        }

    </div>
    <div class="col-md-4">
        <h2>Alcance</h2>
        <p>Este pagina web abarca la informacion del clima en consulta, registro, actulizacion y borrado.</p>
    </div>
</div>